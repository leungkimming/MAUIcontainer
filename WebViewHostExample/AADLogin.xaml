<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebViewHostExample.AADLogin"
             Title="Login">
    <Grid>
        <StackLayout Margin="20">
            <StackLayout Margin="0,80">
                <Label FontSize="32" Text="Azure AD Authentication"/>
            </StackLayout>
            <StackLayout>
                <Label FontSize="16" x:Name="Status"/>
            </StackLayout>
            <Button Margin="0,15" Text="Login" FontFamily="OpenSansBold" Clicked="onLogin" x:Name="Login"  />
            <Button Margin="0,15" Text="Logout" FontFamily="OpenSansBold" Clicked="onLogout"  />
            <Button Margin="100,100,0,0" Text="Opt for Windows Authentication" FontFamily="OpenSansBold" 
                    Clicked="useNTLM" x:Name="useNTLMButton"/>
        </StackLayout>
    </Grid>
</ContentPage>