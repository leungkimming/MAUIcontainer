<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIcontainer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIcontainer"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent x:Name="ShellBar"
        Title="MAUI Container App"
        ContentTemplate="{DataTemplate local:QRcode}"
        Route="QRcode" />
    <MenuItem Text="Exit Current App"
          Command="{Binding ExitBlazorCommand}"/>
</Shell>
