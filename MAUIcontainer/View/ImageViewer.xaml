<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIcontainer.ImageViewer"
             Title="ImageViewer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="55"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Text="file name here."
               TextColor="Black"
               HorizontalOptions="Center"
               x:Name="FilePathLabel"/>
        <Button Margin="3,0" Grid.Row="0" Grid.Column="1" BackgroundColor="Black"
            FontSize="11" Text="Quit" FontFamily="Bold" TextColor="White"
            Clicked="onQuitButton"  />
        <ScrollView x:Name="scrollView"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            VerticalOptions="FillAndExpand" 
            VerticalScrollBarVisibility="Default"
            HorizontalScrollBarVisibility="Default">
            <WebView
                x:Name="FileViewWebView"
                Grid.Row="0" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="FillAndExpand" />
        </ScrollView>
    </Grid>

</ContentPage>